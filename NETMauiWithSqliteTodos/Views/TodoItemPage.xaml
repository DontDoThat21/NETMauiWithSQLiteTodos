<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="NET7MauiWithSqliteTodos.Views.TodoItemPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Task Details">
    <ScrollView>
        <StackLayout Padding="30" Spacing="20">
            <Label Text="Task Name" FontSize="24" />
            <Entry x:Name="taskNameEntry" FontSize="24" Placeholder="Enter task name" />

            <Label Text="Interval (minutes)" FontSize="24" />
            <Entry x:Name="intervalEntry" FontSize="24" Keyboard="Numeric" Placeholder="Enter interval in minutes" />

            <Label Text="Reminder Time" FontSize="24" />
            <DatePicker x:Name="reminderDatePicker" FontSize="24" />
            <TimePicker x:Name="reminderTimePicker" FontSize="24" />

            <Button Text="Save" FontSize="24" Clicked="OnSaveClicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>